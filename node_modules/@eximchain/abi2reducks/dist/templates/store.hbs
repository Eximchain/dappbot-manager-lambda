
import { createStore, applyMiddleware, combineReducers } from "redux";
import thunkMiddleware from "redux-thunk";
import * as reducers from "./txDucks";
import { AllMethodState } from './reusable/types';

export default function configureStore( initialState?:AllMethodState ) {
    const rootReducer = combineReducers( reducers );

    return createStore(
        rootReducer,
        initialState,
        applyMiddleware(
            thunkMiddleware
        ),
    );
}