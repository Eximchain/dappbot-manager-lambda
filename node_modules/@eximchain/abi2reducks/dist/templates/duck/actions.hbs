import { actionNames } from '../../reusable/actions';
import { ParamValue } from '../../reusable/types';
import { Method, ParamNames } from './types';

const ActionNames = actionNames(Method);

export const setParam = (fieldName:ParamNames, value:ParamValue) => {
    return {
        type : ActionNames.SET,
        payload : { fieldName, value }
    }
}

export const submit = () => {
    return {
        type : ActionNames.SUBMIT
    }
}